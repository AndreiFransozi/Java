public class Acampamento {
    //atributos
    private String nome;
    private int idade;
    private char equipe;
    
    //metodos construtores
    public Acampamento(){//consturuto vazio criar objeto ou variavel do tipo dessa classe   
    
    }
    
    //public Acampamento(String nome,  int idade, char equipe){
    //this.nome = nome;
    //this.idade = idade;
    //this.equipe = equipe;
    //}
    
    public Acampamento(String nome, int idade){
        this.nome = nome;
        this.idade = idade;
    }

    public String getNome(){
        return this.nome;
    }
    public void setNome(String nome){
        this.nome = nome;
    }

    public int getIdade() {
        return idade;
    }

    public void setIdade(int idade) {
        this.idade = idade;
    }


    public char getEquipe() {
        return equipe;
    }

    public void setEquipe(char equipe) {
        this.equipe = equipe;
    }

}

public void separarGrupos(){
    if((this.idade >= 6) && (this.idade <= 10)){
    this.setEquipe('A');    
    this.equipe = 'A';
}
if((this.idade >= 11) && (this.idade <= 20)){
    this.setEquipe('B');    
    this.equipe = 'B';
}
if((this.idade > 20){
    this.setEquipe('C');    
    this.equipe = 'C';
}
}

public void imprimirDados(){
System.output.println("Nome" + this. getNome());
System.output.println("Idade" + this. getIdade());
System.output.println("Equipe" + this. getEquipe());
System.output.println("-------------  ");
}
